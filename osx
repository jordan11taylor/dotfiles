# Make keys repeat insanely fast (requires restart)
defaults write NSGlobalDomain KeyRepeat -int 0

# Disable dashboard entirely (requires `$ killall Dashboard`)
defaults write com.apple.dashboard mcx-disabled -boolean YES

# Disable the special character popup when holding keys (requires restart)
defaults write -g ApplePressAndHoldEnabled -bool false

# Allow for text selection within QuickLook (requires `$ killall Finder`)
defaults write com.apple.finder QLEnableTextSelection -bool true
